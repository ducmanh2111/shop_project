<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-5 col-sm-5 col-xs-12">
            <!-- Thumbnail Large Image start -->
            <div class="tab-content">
              <div id="pro-1" class="tab-pane fade show active">
                <%= image_tag (product.image_url(:thumb_medium) if product.image.presence) || "/assets/product-details/product-detalis-l4.jpg" %>
              </div>
              <div id="pro-2" class="tab-pane fade">
                <%= image_tag "/assets/product-details/product-detalis-l4.jpg" %>
              </div>
              <div id="pro-3" class="tab-pane fade">
                <%= image_tag "/assets/product-details/product-detalis-l4.jpg" %>
              </div>
              <div id="pro-4" class="tab-pane fade">
                <%= image_tag "/assets/product-details/product-detalis-l4.jpg" %>
              </div>
            </div>
            <!-- Thumbnail Large Image End -->
            <!-- Thumbnail Image End -->
            <div class="product-thumbnail">
              <div class="thumb-menu owl-carousel nav nav-style owl-carousel" role="tablist">
                <a class="active" data-toggle="tab" href="#pro-1" style="padding: 0px 2px 0px 0px"><%= image_tag product.image_url(:thumb).presence || "/assets/product-details/product-detalis-s4.jpg" %></a>
              </div>
            </div>
            <!-- Thumbnail image end -->
          </div>
          <div class="col-md-7 col-sm-7 col-xs-12">
            <div class="modal-pro-content">
              <h3><%= product.name %> </h3>
              <div class="product-price-wrapper">
                <span><%= number_to_currency(product.price) %></span>
              </div>
              <p><%= product.description %></p>
              <%= form_for ProductOrder.new, remote: true do |f| %>
                <%= f.hidden_field :product_id, value: product.id %>
                <div class="shop-list-cart-wishlist">
                  <%= link_to "#", class: "submit-cart-modal" do %>
                    <i class="ion-android-cart"></i>
                  <% end %>
                  <%= f.submit "submit", style: "display: none" %>
                </div>
                <div class="product-quantity">
                  <div class="cart-plus-minus">
                    <%= f.telephone_field :quantity, value: 1, class: "cart-plus-minus-box", min: 1 %>
                  </div>
                </div>
              <% end %>
              <span><i class="fa fa-check"></i> In stock</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal end -->
